@{
    var relativeUrl = ViewBag.RelativeUrl;
    var fullUrl = $"https://www.staticsitegenerator.net/{relativeUrl}";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title | SSG.NET</title>
    <meta name="description" content="@ViewBag.Description">
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:description" content="@ViewBag.Description">
    <meta property="og:url" content="@fullUrl">
    <meta property="og:type" content="article">
    <meta property="og:site_name" content="SSG.NET">
    <link rel="canonical" href="@fullUrl">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="h-100 d-flex flex-column">
    <header style="flex: 0 0 59px">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow" id="main-menu">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">SSG.NET</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link text-dark">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Documentation" class="nav-link text-dark">Documentación</a>
                        </li>
                        <li class="nav-item ms-md-auto">
                            <a href="#" class="nav-link btn btn-primary text-white" id="changeLanguageBtn"><i class="bi-globe"></i> English/Inglés</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-fill">
        @RenderBody()
    </div>

    <footer class="footer bg-dark" style="flex: 0 0 calc(24px + 2rem)">
        <div class="container">
            <div class="row">
                <div class="text-center text-white">
                    <ul class="list-inline my-0">
                        <li class="list-inline-item"><a href="https://github.com/CamiloTerevinto/TerevintoSoftware.StaticSiteGenerator" target="_blank" class="text-white">GitHub</a> <i class="bi-box-arrow-up-right"></i></li>
                        <li class="list-inline-item">⋅</li>
                        <li class="list-inline-item"><a href="https://www.nuget.org/packages/TerevintoSoftware.StaticSiteGenerator.Tool/" target="_blank" class="text-white">NuGet</a> <i class="bi-box-arrow-up-right"></i></li>
                        <li class="list-inline-item">⋅</li>
                        <li class="list-inline-item"><a href="https://github.com/CamiloTerevinto/TerevintoSoftware.StaticSiteGenerator.Demo" target="_blank" class="text-white">Mejora este sitio</a> <i class="bi-box-arrow-up-right"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
         
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>

    <environment include="Development">
        <script src="~/js/site_dev.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</body>
</html>
